---
type Props = {
  size: number;
  color: string;
  class: string;
};

const { size, color, class: className } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width={size}
  height={size}
  class={className || undefined}
  viewBox={`0 0 ${size} ${size}`}
  role="img"
  aria-label="block"
>
  <rect width={size} height={size} rx="2" ry="2" fill={color}></rect>
</svg>
